{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug MPI App (single process)",
            "type": "cppdbg",
            "request": "launch",
            "MIMode": "gdb",
            "program": "/usr/local/bin/mpirun",
            "args": [
              "-n", "4", "--verbose",
              "--allow-run-as-root",
              "--tag-output",
              "--mca", "btl_vader_single_copy_mechanism", "none",
              "${workspaceFolder}/build/k_means"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "CMake Build Debug",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ]
        },
        {
            "name": "Benchmark K-Means (Release, no debugger)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/local/bin/mpirun",
            "args": [
                "-n", "8",
                "${workspaceFolder}/build/k_means"
            ],
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "stopAtEntry": false,
            "preLaunchTask": "CMake Build Release"
        },        
        
        {
            "name": "(gdb) Launch C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/${fileBasenameNoExtension}",
            "args": [],
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "OpenMP C++: g++ build active file"
        }
    ]
}