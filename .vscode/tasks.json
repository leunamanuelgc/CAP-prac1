{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "OpenMPI & OpenMP C++: mpic++ build active file",
            "command": "mpicxx",
            "args": [
                "-fopenmp",
                //"-fdiagnostics-color=always",
                //"-std=c++11",
                "-O0",
                "-g",
                //"-Wall",
                //"${fileDirname}/*.cpp",
                "-I${workspaceFolder}/include",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Builds a hybrid MPI + OpenMP program using mpic++"
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake",
            "args": [
              "--build", "build"
            ],
            "options": {
              "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
              "kind": "build",
              "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}