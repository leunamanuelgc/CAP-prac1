{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "OpenMPI & OpenMP C++: mpic++ build active file",
            "command": "mpic++",
            "args": [
                "-fopenmp",
                //"-fdiagnostics-color=always",
                "-g",
                //"-Wall",
                //"${fileDirname}/*.cpp",
                "-I${workspaceFolder}/include",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Builds a hybrid MPI + OpenMP program using mpic++"
        }
    ],
    "version": "2.0.0"
}