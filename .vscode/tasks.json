{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "OpenMP C++: g++ build active file",
            "command": "g++",
            "args": [
                "-fopenmp",
                //"-fdiagnostics-color=always",
                //"-std=c++11",
                //"-O0",
                "-g",
                //"-Wall",
                //"${fileDirname}/*.cpp",
                "-I${workspaceFolder}/include",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Builds a C++ OpenMP program using g++"
        },
        {
            "label": "CMake Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
              "--build", "build"
            ],
            "options": {
              "cwd": "${workspaceFolder}"
            },
            "dependsOn": ["CMake Configure Debug"],
            "group": "none"
        },
        {
            "label": "CMake Configure Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
              "-B", "build",
              "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
              "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "CMake Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
              "--build", "build"
            ],
            "options": {
              "cwd": "${workspaceFolder}"
            },
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "dependsOn": ["CMake Configure Release"]
        },
        {
            "label": "CMake Configure Release",
            "type": "shell",
            "command": "cmake",
            "args": [
              "-B", "build",
              "-DCMAKE_BUILD_TYPE=Release"
            ],
            "options": {
              "cwd": "${workspaceFolder}"
            }
        }
    ],
    "version": "2.0.0"
}